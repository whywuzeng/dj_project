
@{
    ViewBag.Title = "切换组织";
}


<link href="~/Scripts/zTree/zTreeStyle/zTreeStyle.css" rel="stylesheet" />

<style>
    #myModal {
        top: 20%;
    }

    #result {
        color: red;
    }
</style>


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="x_panel">
            <div class="x_title">
                <a class="collapse-link">
                    <span style="color:#250486;font-size:14px;font-weight:bold;">查询条件：</span>
                    <span class="pull-right"><i class="fa fa-chevron-up"></i></span>
                </a>
                <div class="clearfix"></div>
            </div>
            <div class="x_content" id="search">
                <form class="form-horizontal form-label-left" novalidate>
                    <div class="item form-group">
                        <div class="col-md-4 col-md-offset-3">
                            <input id="comName1" type="text" name="comName1" placeholder="公司名称.." class="form-control col-md-7 col-xs-12" style="width:60%;">
                            <button type="button" id="btnSearch" class="btn btn-sm btn-info" style="margin-left:5px;margin-top:2px;"><i class="fa fa-search"></i>查询</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="x_panel">
            <div class="x_title">
                <div class="col-md-4 col-md-offset-3">
                    <input id="comName2" type="text" name="comName2" readonly="readonly" class="form-control col-md-5 col-xs-12" style="width:50%;">
                    <button type="button" id="btnOk" class="btn btn-sm btn-success" style="margin-left:5px;margin-top:2px;"><i class="fa fa-save"></i>&nbsp;确定切换</button>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content" style="overflow-x:scroll;">
                <div class="item form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <ul id="tree" class="ztree"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" data-keyboard="false">
    <div class="modal-dialog" style="height:50px;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title">提示：</h4>
            </div>
            <div class="modal-body">
                <span id="result"></span>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnClose" class="btn btn-sm btn-primary" style="margin-right:20px;">&nbsp;确 定</button>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="~/Scripts/vendors/jquery/dist/jquery.js"></script>

<!-- ZTree Scripts -->
<script src="~/Scripts/zTree/jquery.ztree.core.js"></script>

<script src="~/Scripts/Main/EditCom/EditCom.js"></script>
<script>

    $(function () {

        jsObject.Setted.init();

    });


</script>
